<% layout('layouts/boilerplate')%>
<form action="/students/<%=student._id%>?_method=PUT" method="POST">
    <div>
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="student[firstName]" value="<%=student.firstName%>">
    </div>
    <div>
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="student[lastName]" value="<%=student.lastName%>">
    </div>
    <div>
        <label for="instaName">Instagram Name</label>
        <input type="text" id="instaName" name="student[instaName]"  value="<%=student.instaName%>">
    </div>
    <button>Edit Student</button>
</form>
<a href='/students/<%=student._id%>/delete'>Delete</a>
<a href="/students">All Students</a>