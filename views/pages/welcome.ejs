<%- include('../partials/instafeedHead')%>
<body>
  <%- include('../partials/blankNavbar')%>
    <main class="main" id="mainDisplay">
        <div id="page">
            <h1 id="welcomeMsg">Welcome to the BioLab Display! <p>Please wait while our posts load from Instagram.</p></h1>
            <img id="instaLogo" src="../media/instagram-seeklogo.com.svg" alt="Instagram Logo">
            <div id="phrase_box">
            <svg id="svg" width="100%" height="100%">
              <defs>
                <mask id="mask" maskUnits="userSpaceOnUse" maskContentUnits="userSpaceOnUse">
                  <linearGradient id="linearGradient" gradientUnits="objectBoundingBox" x2="0" y2="1">
                    <stop stop-color="white" stop-opacity="0" offset="0%"/>
                    <stop stop-color="white" stop-opacity="1" offset="30%"/>
                    <stop stop-color="white" stop-opacity="1" offset="70%"/>
                    <stop stop-color="white" stop-opacity="0" offset="100%"/>
                  </linearGradient>
                  <rect width="100%" height="100%" fill="url(#linearGradient)"/>
                </mask>
              </defs>
              <g style="mask: url(#mask);">
                <g id="phrases"></g>
              </g>
            </svg>
            </div>
          </div>
          <%- include('../partials/footer.ejs')%>
    </main>
    
    <script src="/javaScripts/welcome.js"></script>
</body>
</html>